{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Espec√≠ficos do app web
    "plugins": [
      { "name": "next" }
    ],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@/components/ui/*": [
        "components/ui/*"
      ],
      "~types/*": ["../../../types/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "playwright.config.ts",
    "tests",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.e2e.ts",
    "**/*.e2e.tsx"
  ]
}
