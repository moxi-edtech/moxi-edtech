{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Espec√≠ficos do app web
    "plugins": [
      { "name": "next" }
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["src/*"],
      "~types/*": ["../../types/*"] // ajuste se suas types estiverem em outro lugar
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "playwright.config.ts",
    "tests",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.e2e.ts",
    "**/*.e2e.tsx"
  ]
}
