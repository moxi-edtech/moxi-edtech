{
  "name": "moxi-edtech-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Moxi EdTech projects",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -w --filter web dev",
    "build": "pnpm -w --filter web build",
    "start": "pnpm -w --filter web start",
    "lint": "pnpm -w --filter web lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "rm -rf .next node_modules/.cache",
    "gen:types": "mkdir -p types && supabase gen types typescript --project-id wjtifcpxxxotsbmvbgoq > types/supabase.ts",
    "db:link": "supabase link --project-ref wjtifcpxxxotsbmvbgoq",
    "db:push": "supabase db push",
    "db:reset": "supabase db reset",
    "db:push:seed": "supabase db push --include-seed",
    "db:seed:remote": "supabase db push --include-seed",
    "db:pull": "bash scripts/supabase-pull-remote.sh",
    "db:pull:remote": "bash scripts/supabase-pull-remote.sh",
    "db:dump:remote": "bash scripts/db-dump-remote.sh",
    "db:dump:remote:schema-only": "SCHEMA_ONLY=1 bash scripts/db-dump-remote.sh",
    "db:dump:remote:public": "SCHEMAS=public bash scripts/db-dump-remote.sh",
    "db:dump:remote:all": "SCHEMAS='*' bash scripts/db-dump-remote.sh",
    "db:restore:local": "bash scripts/db-restore-local.sh",
    "test:rls": "psql -f supabase/tests/assert_tenant_rls.sql"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "autoprefixer": "^10.4.22"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@storybook/addon-essentials": "8.6.15",
    "@storybook/addon-interactions": "8.6.15",
    "@storybook/addon-links": "8.6.15",
    "@storybook/nextjs": "8.6.15",
    "@storybook/react": "8.6.15",
    "storybook": "8.6.15",
    "typescript": "5.9.3"
  }
}
