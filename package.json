{
  "name": "moxi-edtech-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Moxi EdTech projects",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -w --filter web dev",
    "build": "pnpm -w --filter web build",
    "start": "pnpm -w --filter web start",
    "lint": "pnpm -w --filter web lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "rm -rf .next node_modules/.cache",
    "db:types": "bash -c 'set -euo pipefail; mkdir -p types; tmp=$(mktemp); if command -v supabase >/dev/null 2>&1; then supabase gen types typescript --project-id wjtifcpxxxotsbmvbgoq > \"$tmp\"; elif [ \"${VERCEL:-}\" = \"1\" ] && [ -z \"${SUPABASE_ACCESS_TOKEN:-}\" ]; then echo \"Skipping db:types on Vercel (no supabase CLI/token)\"; rm \"$tmp\"; exit 0; else pnpm dlx supabase@latest gen types typescript --project-id wjtifcpxxxotsbmvbgoq > \"$tmp\"; fi; mv \"$tmp\" types/supabase.ts'",
    "db:link": "supabase link --project-ref wjtifcpxxxotsbmvbgoq",
    "db:push": "supabase db push",
    "db:reset": "supabase db reset",
    "db:push:seed": "supabase db push --include-seed",
    "db:seed:remote": "supabase db push --include-seed",
    "db:pull": "bash scripts/supabase-pull-remote.sh",
    "db:pull:remote": "bash scripts/supabase-pull-remote.sh",
    "db:dump:remote": "bash scripts/db-dump-remote.sh",
    "db:dump:remote:schema-only": "SCHEMA_ONLY=1 bash scripts/db-dump-remote.sh",
    "db:dump:remote:public": "SCHEMAS=public bash scripts/db-dump-remote.sh",
    "db:dump:remote:all": "SCHEMAS='*' bash scripts/db-dump-remote.sh",
    "db:restore:local": "bash scripts/db-restore-local.sh",
    "db:select:remote": "bash scripts/db-select-remote.sh",
    "db:select:local": "bash scripts/db-select-local.sh",
    "test:rls": "psql -f supabase/tests/assert_tenant_rls.sql",
    "agent:kf2": "tsx agents/scan/kf2-search-audit.ts",
    "agent:scan": "tsx agents/scripts/codex-scan-v2.ts --repo . --contracts agents --out agents/outputs",
    "agents:scan": "tsx agents/scripts/codex-scan-v2.ts --repo . --contracts agents --out agents/outputs",
    "agents:gate": "tsx agents/scripts/perf-gate.ts --scan agents/outputs/REPORT_SCAN.json --contracts agents --out agents/outputs",
    "agents:apply": "tsx agents/scripts/apply-agent.ts --plan agents/outputs/PLAN_PATCHES.json --gate agents/outputs/PERF_GATE.json --repo . --mode safe",
    "scan": "bash scripts/scan-report.sh",
    "validate:presets": "bash scripts/validate-presets-global.sh"
  },
  "pnpm": {
    "overrides": {
      "@supabase/postgrest-js": "2.90.1"
    }
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "autoprefixer": "^10.4.22",
    "fast-glob": "^3.3.3",
    "tsx": "^4.21.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@storybook/addon-essentials": "8.6.15",
    "@storybook/addon-interactions": "8.6.15",
    "@storybook/addon-links": "8.6.15",
    "@storybook/nextjs": "8.6.15",
    "@storybook/react": "8.6.15",
    "@tanstack/react-table": "^8.21.3",
    "date-fns": "2.29.3",
    "diff": "^5.2.0",
    "postgres": "^3.4.8",
    "storybook": "8.6.15",
    "ts-morph": "^27.0.2",
    "typescript": "5.9.3",
    "yargs": "^17.7.2",
    "zod": "^3.23.8"
  }
}
